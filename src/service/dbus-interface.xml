<node>
  <interface name="com.canonical.Thumbnailer">
    <method name="GetAlbumArt">
      <arg direction="in" type="s" name="artist" />
      <arg direction="in" type="s" name="album" />
      <!-- possible values are "small", "large", "xlarge" and "original" -->
      <arg direction="in" type="s" name="desiredSize" />
      <arg direction="out" type="h" name="fd" />
      <annotation name="org.gtk.GDBus.C.UnixFD" value="true" />
    </method>

    <!-- Note: if adding additional thumbnailing methods that take a
         file name as input, ensure that the calling process has
         permission to read said file.  Otherwise we will leak
         information to confined applications. -->
  </interface>
</node>
